<%- include("header") %>

    <div class="content-wrapper">
        <div class="container-fluid">

            <div class="row mt-3" style="justify-content: center;">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">Add Admin</div>
                            <hr>
                            <form action="/admin/insert_admin" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" placeholder="Enter Your Name"
                                        name="name">
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" class="form-control" placeholder="Enter Your Email Address"
                                        name="email">
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="text" class="form-control" placeholder="Enter Password"
                                        name="password">
                                </div>
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    <input type="text" class="form-control" placeholder="Confirm Password" name="confirm_pass">
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea name="description" class="form-control"
                                        placeholder="Enter Description"></textarea>
                                </div>

                                <div class="form-group">
                                    <label>City</label>
                                    <%var city=["surat","ahemadabad","rajkot","vadodara"];%>
                                        <select class="form-control" name="city">
                                            <option value="">-- - --</option>
                                            <% city.map((v)=>{ %>
                                                <option value="<%= v %>">
                                                    <%= v %>
                                                </option>
                                                <% }) %>
                                        </select>
                                </div>

                                <div class="form-group py-2">
                                    <label>Gender</label>
                                    <div style="display: flex;">
                                        <div class="icheck-material-white">
                                            <input type="radio" id="user-radio1" name="gender" value="male" />
                                            <label for="user-radio1">Male</label>
                                        </div>
                                        <div class="icheck-material-white" style="margin-left: 30px;">
                                            <input type="radio" id="user-radio2" name="gender" value="female" />
                                            <label for="user-radio2">Female</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group py-2">
                                    <label>Hobby</label>
                                    <div style="display: flex;">
                                        <div class="icheck-material-white">
                                            <input type="checkbox" id="user-checkbox1" name="hobby" value="foody" />
                                            <label for="user-checkbox1">Foody</label>
                                        </div>
                                        <div class="icheck-material-white" style="margin-left: 30px;">
                                            <input type="checkbox" id="user-checkbox2" name="hobby" value="adventure" />
                                            <label for="user-checkbox2">adventure</label>
                                        </div>
                                        <div class="icheck-material-white" style="margin-left: 30px;">
                                            <input type="checkbox" id="user-checkbox3" name="hobby"
                                                value="travelling" />
                                            <label for="user-checkbox3">travelling</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Image</label>
                                    <label class="filelabel">
                                        <i class="fa fa-paperclip">
                                        </i>
                                        <span class="title">
                                            Add Img
                                        </span>
                                        <input class="FileUpload1" id="FileInput" name="admin_img" type="file" />
                                    </label>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i>
                                        Add</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
            <!--End Row-->

            <%- include("footer") %>