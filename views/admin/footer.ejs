<script>

  function getsubcat() {

    var category = document.getElementById("category").value;
    $.ajax({
      url: "/admin/subcategory/getsubcat",
      method: "post",
      data: {
        categoryId: category
      },
      success: function (res) {
        $("#subcategory").html(res)
      }
    })
  }

  function getextracat() {
    var subcategory = document.getElementById("subcategory").value;
    $.ajax({
      url: "/admin/extracategory/getextracat",
      method: "post",
      data: {
        subcategoryId: subcategory
      },
      success: function (res) {
        $("#extracategory").html(res)
      }
    })
  }


  function getbrandType() {
    var extracategory = document.getElementById("extracategory").value;
    $.ajax({
      url: "/admin/extracategory/getbrandType",
      method: "post",
      data: {
        extracategoryId: extracategory
      },
      success: function (res) {
        $("#brand").html(res[0])
        $("#type").html(res[1])
      }
    })
  }


  function deleteSpecificImg(src, id, i, index) {
    // var src = src;
    // var id = id;
    var deleteSpecificImg = confirm("Are you sure delete ?")
    if (deleteSpecificImg) {
      $.ajax({
        url: "/admin/product/deleteSpecificImg",
        method: "post",
        data: {
          src: src,
          id: id,
          index: i
        },
        success: function (res) {
          $("#multi_img" + index).html(res)
        }
      })
    }
  }
</script>