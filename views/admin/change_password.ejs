<%- include("header") %>

    <div class="content-wrapper">
        <div class="container-fluid">

            <div class="row mt-3" style="justify-content: center;">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">Change Password</div>
                            <hr>
                            <form action="/admin/update_password" method="post">
                                <div class="form-group">
                                    <label>Current Password</label>
                                    <input type="text" class="form-control" placeholder="Enter Your Current Password"
                                        name="password">
                                </div>
                                <div class="form-group">
                                    <label>New Password</label>
                                    <input type="text" class="form-control" placeholder="Enter Your New Password"
                                        name="npass">
                                </div>
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    <input type="text" class="form-control" placeholder="Enter Confirm Password" name="cpass">
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i>
                                        Change</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
            <!--End Row-->

            <%- include("footer") %>